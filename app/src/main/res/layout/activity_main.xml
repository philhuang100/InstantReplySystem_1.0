<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.com.pcschool.instantreplysystem_10.MainActivity"
    android:background="#98f8e0">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/checkInButton"
        android:src="@drawable/check_in_1"
        android:onClick="checkInClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/replyButton"
        android:layout_alignStart="@+id/replyButton" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/scheduleButton"
        android:src="@drawable/schedule_1"
        android:onClick="scheduleClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/replyButton"
        android:src="@drawable/reply_1"
        android:onClick="replyClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/document"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="docclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="排程規劃"
        android:id="@+id/button2"
        android:background="#03ffffff"
        android:textSize="25dp"
        android:textColor="#c61358"
        android:singleLine="false"
        android:layout_below="@+id/scheduleButton"
        android:layout_centerHorizontal="true"
        android:onClick="s_click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="結案回報"
        android:id="@+id/button5"
        android:background="#03ffffff"
        android:textSize="25dp"
        android:textColor="#c61358"
        android:singleLine="false"
        android:layout_below="@+id/replyButton"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="r_click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="到場打卡"
        android:id="@+id/button6"
        android:background="#03ffffff"
        android:textSize="25dp"
        android:textColor="#c61358"
        android:singleLine="false"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="c_click" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/email"
        android:background="#06ffffff"
        android:onClick="emailclick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
