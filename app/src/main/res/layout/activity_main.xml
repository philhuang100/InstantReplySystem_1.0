<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tw.com.pcschool.instantreplysystem_10.MainActivity"
    android:background="#98f8e0">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/checkInButton"
        android:src="@drawable/check_in_1"
        android:onClick="checkInClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/replyButton"
        android:layout_alignStart="@+id/replyButton"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/scheduleButton"
        android:src="@drawable/schedule_1"
        android:onClick="scheduleClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/replyButton"
        android:src="@drawable/reply_1"
        android:onClick="replyClick"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/scheduleButton"
        android:layout_alignStart="@+id/scheduleButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="打卡定位"
        android:id="@+id/textView5"
        android:layout_below="@+id/checkInButton"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="排程規劃"
        android:id="@+id/textView6"
        android:layout_below="@+id/scheduleButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="結案回報"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="高輝&amp;遐焜 APP工作室"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/manual_1"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
